<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.weathercock.profilepicker_plus"
    android:installLocation="auto"
    android:sharedUserId="com.weathercock" >

<!--    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />-->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.weathercock.profilepicker_plus.activity.ProfileActivity"
            android:exported="true"
            android:label="@string/title_activity_profile" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.adamrocker.android.simeji.ACTION_INTERCEPT" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="com.adamrocker.android.simeji.REPLACE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.weathercock.profilepicker_plus.activity.EditActivity"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name="com.weathercock.profilepicker_plus.activity.PrefsActivity"
            android:label="@string/title_activity_prefs" >
        </activity>
        <activity
            android:name="com.weathercock.profilepicker_plus.activity.QrCodeActivity"
            android:theme="@style/Theme.HalfTransparent" >
        </activity>
        <activity
            android:name="com.weathercock.profilepicker_plus.activity.OverlayActivity"
            android:theme="@style/Theme.HalfTransparent" >
        </activity>
    </application>

</manifest>
