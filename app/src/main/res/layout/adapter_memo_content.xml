<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root_adapter_memo_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp" >

    <TextView
        android:id="@+id/text_title_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/dummy_text"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/divide_header_memo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_title_memo"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/dummy_text"
        android:scaleType="fitXY"
        android:src="@android:color/holo_blue_bright" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/divide_header_memo"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/text_content_memo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dummy_text"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/image_share_memo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/dummy_text"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_share" />
    </LinearLayout>

</RelativeLayout>
